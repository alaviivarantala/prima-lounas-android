<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorWhitesmoke">

    <LinearLayout
        android:id="@+id/layout_loading"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <androidx.core.widget.ContentLoadingProgressBar
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            style="?android:attr/progressBarStyleLarge"/>

        <TextView
            android:id="@+id/textview_loadingtext"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hold on I'm fetching the menu!"
            android:textAlignment="center"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/layout_loaded"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardCornerRadius="4dp"
                android:padding="4dp"
                card_view:contentPadding="4dp"
                card_view:cardElevation="4dp">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnCount="3"
                    android:rowCount="1">

                    <TextView
                        android:id="@+id/textview_saladprice"
                        android:layout_gravity="center"
                        android:layout_columnWeight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salaattipöytä 4,60 €"/>

                    <TextView
                        android:id="@+id/textview_foodprice"
                        android:layout_gravity="center"
                        android:layout_columnWeight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kotiruoka 6,90 €"/>

                    <TextView
                        android:id="@+id/textview_soupprice"
                        android:layout_gravity="center"
                        android:layout_columnWeight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Keitto 5,90 €"/>

                </GridLayout>

            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_foodcourses"
                android:nestedScrollingEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_error"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shits fuckd yo, we encountered an error:"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/textview_errortext"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connection timed out."
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Whatever that means. \nI guess you should contact Sami Tuominen at sami.tuominen@primapower.com. Ask him about his Honda."
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</RelativeLayout>